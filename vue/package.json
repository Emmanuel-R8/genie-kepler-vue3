  "license": "MIT",
  "author": "John Campbell <johncampbell@geospatialweb.ca> <http://www.linkedin.com/in/geospatialweb>",
  "description": "Golang, Vue 3, TypeScript, tsx, Vuex, Vite, Mapbox GL, Deck.gl, PostGIS, Docker, Geospatial Web Mapping",
  "keywords": [
    "Golang",
    "Vue 3",
    "TypeScript",
    ".tsx",
    "Vuex",
    "Vite",
    "Mapbox GL",
    "Deck.GL",
    "PostGIS",
    "Docker",
    "Geospatial",
    "Web Map"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/geospatialweb/go-vue3-tsx"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build --emptyOutDir",
    "preview": "vite preview",
    "format": "prettier --write 'src/**/*.ts*'",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "stylelint": "stylelint 'src/**/*.scss' --fix",
    "test": "jest src",
    "test:e2e": "start-server-and-test dev http-get://localhost:3000 cypress",
    "cypress": "cypress run"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "d3-fetch": "^2.0.0",
    "lodash": "^4.17.21",
    "mapbox-gl": "^2.2.0",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "vue": "^3.0.11",
    "vue-router": "^4.0.6",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/eslint-parser": "^7.13.14",
    "@types/d3-fetch": "^2.0.0",
